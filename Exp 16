#include <stdio.h>
struct emp{int id; char name[20]; float sal;};

int main(){
 FILE *fp=fopen("emp.dat","wb+"); struct emp e;
 for(int i=0;i<3;i++){scanf("%d %s %f",&e.id,e.name,&e.sal); fwrite(&e,sizeof(e),1,fp);}
 int r; printf("Enter record: "); scanf("%d",&r);
 fseek(fp,(r-1)*sizeof(e),SEEK_SET);
 fread(&e,sizeof(e),1,fp);
 printf("%d %s %.2f\n",e.id,e.name,e.sal);
 fclose(fp);
}
